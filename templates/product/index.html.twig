{% extends 'base.html.twig' %}

{% block title %}Азійський магазин їжі{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #FFF8F0;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #C75B3C;
            margin-bottom: 30px;
        }

        form {
            text-align: center;
            margin-bottom: 20px;
        }

        input[type="text"] {
            padding: 8px 12px;
            border: 1px solid #CFA49B;
            border-radius: 4px;
            width: 200px;
        }

        button {
            padding: 8px 16px;
            border: none;
            background-color: #E4978C;
            color: white;
            border-radius: 4px;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background-color: #C75B3C;
        }

        table {
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: #FFDCC1;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
        }

        .pagination .pagination-page,
        .pagination .pagination-prev,
        .pagination .pagination-next {
            padding: 8px 16px;
            margin: 0 3px;
            background-color: #E4978C;
            color: white;
            border-radius: 4px;
            text-decoration: none;
            transition: 0.3s;
        }

        .pagination .pagination-page:hover,
        .pagination .pagination-prev:hover,
        .pagination .pagination-next:hover {
            background-color: #C75B3C;
        }

        .pagination .disabled {
            opacity: 0.5;
            pointer-events: none;
        }


        th {
            background-color: #E4978C;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #FFE5D4;
        }

        tr:hover {
            background-color: #F6C8B7;
        }

        small {
            color: #555;
        }
        a:hover {
            background-color: #E4978C;
            color: white;
        }

    </style>

    <h1>Азійський магазин їжі</h1>

    <form method="get" action="{{ path('app_product') }}" style="text-align: center; margin-bottom: 20px;">
        <input type="text" name="category" placeholder="Категорія(sushi...)" value="{{ selected_category }}"
               style="padding: 8px 12px; border: 1px solid #CFA49B; border-radius: 4px; width: 200px;">
        <button type="submit" style="padding: 8px 16px; border: none; background-color: #E4978C; color: white; border-radius: 4px; cursor: pointer; transition: 0.3s;">Фільтрувати</button>

        {% if selected_category %}

            <a href="{{ path('app_product') }}"
               style="margin-left: 10px; padding: 8px 16px; background-color: #C75B3C; color: white; border-radius: 4px; text-decoration: none; transition: 0.3s;">
                Показати всі
            </a>
        {% endif %}

    </form>

    {% if products|length > 0 %}

        <table>
            <thead>
            <tr>
                <th>Назва</th>
                <th>Ціна</th>
                <th>Категорія</th>
                <th>Опис</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }} грн</td>
                    <td>{{ product.category }}</td>
                    <td><small>{{ product.description }}</small></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div style="text-align: center; margin-top: 20px;">
            {{ knp_pagination_render(products) }}
        </div>
    {% else %}
        <p style="text-align: center; color: #C75B3C; font-weight: bold;">Товари не знайдені</p>
    {% endif %}
{% endblock %}

